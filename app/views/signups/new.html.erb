<section class="main-section-signup">
  <div class="main-section-signup__contents">
    <h1 class="title">Get the latest updates from Stories</h1>
    <%= form_for(@signup) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.submit "Sign up" %>
    <% end %>
  </div>
</section>
